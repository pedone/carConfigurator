@{ 
    var productTitle = LocalizationManager.Localize("ProductTitle");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar bg-light navbar-light navbar-expand-sm fixed-top">
        <div class="container">
            @Html.ActionLink(productTitle, "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarToggleContent">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-item nav-link active" })
                <a href="@Url.RouteUrl(Constants.Routes.ConfigurationList)" class="nav-item nav-link active">@LocalizationManager.Localize("ConfigurationList")</a>
                <a href="@Url.RouteUrl(Constants.Routes.OrderOverview)" class="nav-item nav-link active">@LocalizationManager.Localize("OrderList")</a>
            </div>
        </div>
    </nav>

    @RenderSection("ConfigurationHeader", required: false)

    <div class="container body-content">
        <div class="row align-items-start">
            <div class="col">
                @RenderBody()
            </div>
            <div class="col col-md-auto">
                @RenderSection("CartOverview", required: false)
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @productTitle</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapKnockout")
    @RenderSection("scripts", required: false)
</body>
</html>
