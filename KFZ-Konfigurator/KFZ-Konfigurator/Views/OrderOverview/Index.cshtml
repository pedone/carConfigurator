@using KFZ_Konfigurator.Helper;
@model KFZ_Konfigurator.ViewModels.OrderPageViewModel

@{
    ViewBag.Title = LocalizationManager.Localize("OrderOverviewView_Title");
}

@Html.AntiForgeryToken()
<h2 class="mt-3">@LocalizationManager.Localize("OrderOverviewView_Header")</h2>

<table class="table">
    <tr>
        <th>
            @LocalizationManager.Localize("OrderOverviewView_Description_CarModel")
        </th>
        <th>
            @LocalizationManager.Localize("OrderOverviewView_Description_Header")
        </th>
        <th>
            @LocalizationManager.Localize("OrderOverviewView_BasePrice_Header")
        </th>
        <th>
            @LocalizationManager.Localize("OrderOverviewView_ExstrasPrice_Header")
        </th>
        <th>
            @LocalizationManager.Localize("OrderOverviewView_Price_Header")
        </th>
        <th></th>
    </tr>

    <tbody data-bind="foreach: orders">
        <tr>
            <td data-bind="text: model"></td>
            <td data-bind="text: description"></td>
            <td data-bind="text: formatCurrency(basePrice)"></td>
            <td data-bind="text: formatCurrency(extrasPrice)"></td>
            <td data-bind="text: formatCurrency(price)"></td>
            <td>
                <a data-bind="attr: {href: linkUrl}">@LocalizationManager.Localize("Load")</a> |
                <a href="#" data-bind="click: function(data, event) { $parent.deleteItem(data, event, $(document)) }">
                    @LocalizationManager.Localize("Delete")
                </a>
            </td>
        </tr>
    </tbody>
</table>

@section scripts {
    <script type="text/javascript" src="@Url.Content("/Scripts/app/OrderListViewModel.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/app/Helper.js")"></script>
    <script type="text/javascript">
        let orders = @Html.Raw(Json.Encode(Model.Orders));
        let loadConfigurationRouteTemplate = "@Url.RouteUrl(Constants.Routes.LoadOrder, new { orderGuid = "Placeholder" })";
        let viewModel = new OrderListViewModel(orders, loadConfigurationRouteTemplate);

        $(document).ready(function () {
            ko.applyBindings(viewModel);
        });
    </script>
}