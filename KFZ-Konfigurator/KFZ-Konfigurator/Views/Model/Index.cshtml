@model IEnumerable<KFZ_Konfigurator.ViewModels.CarModelViewModel>

@{
    Layout = "~/Views/Shared/_ConfigurationLayout.cshtml";
    ViewBag.Title = "Model";
    ViewBag.BackgroundImage = "carConfiguration.png";
}

@Html.AntiForgeryToken()
<h2>@LocalizationManager.Localize("ModelHeader")</h2>

<div class="row container">
    @foreach (var item in Model)
    {
        <a class="card mb-2 col-md-4 rounded-0 car-model-link" data-id="@item.Id" href="@Url.RouteUrl(Constants.Routes.EngineSettings, new { id = item.Id})">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(_ => item.Series) @Html.DisplayFor(_ => item.BodyType) @Html.DisplayFor(_ => item.Year)</h5>
                <h6 class="card-subtitle">@LocalizationManager.Localize("from") @Html.DisplayFor(_ => item.BaseSettings.Price)</h6>
                <div class="card-text mt-3">
                    <div>
                        @LocalizationManager.Localize("TechnicalData_Consumption"): @Html.DisplayFor(_ => item.BaseSettings.Consumption) l/100 km
                    </div>
                    <div>
                        @LocalizationManager.Localize("TechnicalData_Emissions"): @Html.DisplayFor(_ => item.BaseSettings.Emission) g/km
                    </div>
                </div>
            </div>
        </a>
    }
</div>

@section scripts {
    <script type='text/javascript'>
        $(document).ready(function () {
            $('.car-model-link').click(function () {
                event.preventDefault();
                let targetUrl = $(this).attr('href');
                let id = $(this).data('id');
                let antiForgeryToken = getAntiForgeryToken($(document));
                saveViewModel('/Model/SetCarModel', id, antiForgeryToken)
                    .done(() => {
                        window.location.href = targetUrl;
                    })
                    .fail((error) => {
                        console.log('failed to set car model: ' + error.responseText + ' (' + error.statusText + ')');
                        //TODO show alert?
                    });
            });
        });
    </script>
}