@model IEnumerable<KFZ_Konfigurator.ViewModels.CarModelViewModel>

@{
    Layout = "~/Views/Shared/_ConfigurationLayout.cshtml";
    ViewBag.Title = "Model";
    ViewBag.BackgroundImage = "carConfiguration.png";
    ViewBag.HideConfigurationItems = true;
}

<h2>Choose your model</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-sm-4">
            <div class="card-header">
                <h5 class="card-title">@Html.DisplayFor(_ => item.Series) @Html.DisplayFor(_ => item.Year)</h5>
                <h6 class="card-subtitle">@Html.DisplayFor(_ => item.BaseSettings.Price) EUR</h6>
            </div>
            <div class="card-body">
                <div class="card-text">
                    @Html.DisplayNameFor(model => model.BodyType): @Html.DisplayFor(_ => item.BodyType)
                </div>
                <a href="@Url.RouteUrl(Constants.Routes.EngineSettings, new { id = item.Id})" class="btn btn-primary">Select</a>
            </div>
        </div>
    }
</div>